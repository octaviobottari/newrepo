

    <h1>Add New Inventory</h1>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
    <p>All fields are required. Year must be a 4-digit number. Price can be decimal or integer. Miles must be a whole number. Image and thumbnail paths must start with /images/vehicles/.</p>
    <form id="addInventoryForm" action="/inv/add-inventory" method="post">
        <label for="classification_id">Classification:</label>
        <%- classificationList %>
        <label for="inv_make">Make:</label>
        <input
            type="text"
            id="inv_make"
            name="inv_make"
            required
            minlength="3"
            placeholder="Enter make (min 3 characters)"
            value="<%= locals.inv_make || '' %>"
        >
        <label for="inv_model">Model:</label>
        <input
            type="text"
            id="inv_model"
            name="inv_model"
            required
            minlength="3"
            placeholder="Enter model (min 3 characters)"
            value="<%= locals.inv_model || '' %>"
        >
        <label for="inv_year">Year:</label>
        <input
            type="number"
            id="inv_year"
            name="inv_year"
            required
            pattern="\d{4}"
            placeholder="Enter 4-digit year"
            value="<%= locals.inv_year || '' %>"
        >
        <label for="inv_description">Description:</label>
        <textarea
            id="inv_description"
            name="inv_description"
            required
            placeholder="Enter description"
        ><%= locals.inv_description || '' %></textarea>
        <label for="inv_image">Image Path:</label>
        <input
            type="text"
            id="inv_image"
            name="inv_image"
            required
            pattern="^/images/vehicles/.*"
            placeholder="/images/vehicles/image.jpg"
            value="<%= locals.inv_image || '' %>"
        >
        <label for="inv_thumbnail">Thumbnail Path:</label>
        <input
            type="text"
            id="inv_thumbnail"
            name="inv_thumbnail"
            required
            pattern="^/images/vehicles/.*"
            placeholder="/images/vehicles/thumb.jpg"
            value="<%= locals.inv_thumbnail || '' %>"
        >
        <label for="inv_price">Price:</label>
        <input
            type="number"
            id="inv_price"
            name="inv_price"
            required
            min="0"
            step="0.01"
            placeholder="Enter price"
            value="<%= locals.inv_price || '' %>"
        >
        <label for="inv_miles">Miles:</label>
        <input
            type="number"
            id="inv_miles"
            name="inv_miles"
            required
            min="0"
            step="1"
            placeholder="Enter miles"
            value="<%= locals.inv_miles || '' %>"
        >
        <label for="inv_color">Color:</label>
        <input
            type="text"
            id="inv_color"
            name="inv_color"
            required
            minlength="3"
            placeholder="Enter color (min 3 characters)"
            value="<%= locals.inv_color || '' %>"
        >
        <button type="submit">Add Inventory</button>
    </form>

