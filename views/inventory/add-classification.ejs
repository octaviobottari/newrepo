
    <h1>Add New Classification</h1>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
    <p>Classification name must not contain spaces or special characters.</p>
    <form id="addClassificationForm" action="/inv/add-classification" method="post">
        <label for="classification_name">Classification Name:</label>
        <input
            type="text"
            id="classification_name"
            name="classification_name"
            required
            pattern="[A-Za-z0-9]+"
            placeholder="Enter classification name"
            value="<%= locals.classification_name || '' %>"
        >
        <button type="submit">Add Classification</button>
    </form>
